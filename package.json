{
  "name": "nanofs",
  "version": "1.0.0",
  "description": "A tiny in-memory mock file system for the browser",
  "main": "dist/index.min.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --outdir=dist --minify --target=es2020,edge88,firefox78,chrome87,safari14",
    "test": "jest",
    "prepublish": "npm run test && npm run build"
  },
  "keywords": [
    "fs",
    "file system",
    "memory fs",
    "browser fs"
  ],
  "author": "adamwph (awphi)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "esbuild": "^0.17.7",
    "jest": "^29.4.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
